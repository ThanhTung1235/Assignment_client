    <Grid>
        <Frame x:Name="Frame">
            <ScrollViewer>
                <Pivot>
                    <Pivot.Title>Student App</Pivot.Title>
                    <PivotItem Header="Thông tin cá nhân">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="26.4"></RowDefinition>
